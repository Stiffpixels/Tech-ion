{% for post in collections.recent | reverse %}
{% if loop.index<4 %}
<section class="sidebar-recent-post">
  <a href="{{ post.url }}"><img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" loading="lazy" /></a>
<p class="sidebar-body">
  <a href="{{ post.url }}">{{post.data.title}}</a>
</p>
</section>
{% endif %}
{% endfor %}